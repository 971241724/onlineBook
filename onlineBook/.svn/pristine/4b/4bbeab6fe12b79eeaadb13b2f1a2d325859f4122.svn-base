body{font-size: 12px; font-family: "Microsoft YaHei","宋体";}
.containter{}
.wrap{width:100%;height:100%;margin:0 auto;position: relative;min-width: 1130px;height:900px}
ul, ol, dl, dt, dd { list-style-type: none; }
ul{padding:0;margin:0;}

/*头部*/
.header{width:100%;background-color:#F03227;height:70px;position: relative;min-width:1130px;margin:0 auto;} 
.logo{float:left;}
.systemname {float:left;color:#fff;font-size:30px;padding:25px 15px 0;font-weight: bold;}
.nav {  line-height: 40px;text-align: center;font-size: 12px;position: relative;padding-top:30px; }
.nav-main {width: 100%;height: 100%;list-style-type: none;}
.nav-main>li {width: 110px;height: 100%;display: block;float: left; color: #fff;margin-right: 1px;cursor: pointer; }
.nav-main li span{border-left:1px solid #f57068;padding:0 30px;}
.hidden-box {width: 112px;border: 1px solid #643519;border-top: 0;position: absolute;display: none;background: #fff;top: 70px;z-index:9909;}
.hidden-loc-index {left: 1114px;} 
.hidden-loc-two {left: 1004px;} 
.hidden-loc-three {left: 892px;} 
.hidden-loc-four {left: 782px;} 
.hidden-box>ul {list-style-type: none;color: #643519;cursor: pointer;}
.hidden-box>ul li:hover {background-color:#F03227;}
.head_bar{color:#000;height: 22px;position: absolute;top: 26px;right: 15px;line-height: 22px;}
.head_bar em {display: inline-block;width: 350px;background: url(../images/head_bar.png) no-repeat;}
.head_bar span {display: inline-block;padding: 0 12px 0 5px; }
.head_bar a {color:#000;text-decoration: none;}

.p_nav{ background:url(../images/ico_tag_orange.png) no-repeat 0px center; padding:0 20px; line-height:25px; margin:5px 20px 15px; border-bottom:dotted 1px #ccc; color:#666;font-size: 12px}
 
/*一个容器单位*/
.wrap_box{margin:15px 0;border:solid 1px #CBD8E0; }

/*wrap_box里的title*/
.wrap_box .title { background: url(../images/title_bg_gray.jpg) repeat-x;font-size:14px;height:27px; line-height:27px; color:#914A11;   }
.wrap_box .title span{ display:inline-block;background: url(../images/page_green.png) no-repeat 6px center; padding-left:28px;}
.wrap_box .title a{ text-decoration:none;   float:right; padding-right:10px; background:url(../images/scroll_arrow_down.gif) no-repeat 6px center;width:15px;line-height:27px;height:27px;}

/*title右侧按钮*/
h2{margin:0;padding:0;}
.wrap_box .title .operation{ position:absolute; top:2px; right:4px; display:inline-block;}
.wrap_box .title .operation a{ display:inline-block; height:20px; line-height:20px; background:url(../images/tit_oper06.gif) repeat-x; border:solid 1px #59C669; font-size:12px; color:#376F37; padding:0px 10px; font-weight:normal; margin-right:4px; border-top-color:#C2EEBD; border-left-color:#C2EEBD;}
.wrap_box .title .operation a:hover{ background: url(../images/tit_oper04.gif) repeat-x;text-decoration:none; color:#fff; border-color:#B04200;border-top-color:#FFF1D7; border-left-color:#FFF1D7;}
.float50{float:left;width:49%;margin-left:5px;}
/*表格样式01*/
.table01{background:#fff;}
.table01 td,.table01 th{padding:4px 5px;border:solid 1px #E8E8E8; border-width:0 1px 1px 0;}
.table01 th{ background:#F4F5F8; font-weight:normal; color:#666;}
.table01 td input{ border:solid 1px #CAD5D9; line-height:16px; height:18px;}
.table01 td select{width:225px;height:23px;line-height:20px;border:1px solid #CAD5D9;}
.table01 td img{padding:0px 3px 0px 3px; vertical-align:middle;}
.table01 td span.tips{ color:#999;}
