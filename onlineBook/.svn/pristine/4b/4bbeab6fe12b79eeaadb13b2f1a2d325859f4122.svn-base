.table_box tr{ line-height: 30px; height:30px; }
.table_box th a{background-color:#F0F0F0;border:1px solid #CAD5D9;padding:5px;cursor: pointer;color:#666;text-decoration: none;}


.Grid_Item td a{padding:5px 15px;}

.button_box{ text-align: center;  }
.button_box a{ text-decoration: none; }
/**/
a.button_cell{ display:inline-block;_display:inline; padding-right:5px; background:url(../images/button01_bg.png) no-repeat right -28px; height:28px; cursor:pointer;}
a.button_cell input{ border:none; background:url(../images/button01_bg.png) no-repeat; height:28px; line-height:24px; padding:0px 5px 2px 12px;letter-spacing:2px; cursor:pointer;}

a.button_cell:hover{ background:url(../images/button01_bg.png) no-repeat right -84px; text-decoration:none;}
a.button_cell:hover input{ background:url(../images/button01_bg.png) no-repeat left -56px; color: #060;}
/*pq grid*/
.toolbar_p {float:right; }

/*tab标签*/
#tab{ height:100%;background: #fefefe;}
#tab .tabList ul{margin:0;padding:0;height:47px;}
#tab .tabList ul li{float:left; padding:8px 0;width:10%;height:23px;text-align:center; cursor:pointer;background:#F0F1F5;font:bold 14px Microsoft Yahei;color:#666666;}
#tab .tabCon{border-top:none;width:100%;height:90%;}
#tab .tabCon div{padding:20px 0;  width:98%;margin-left: 20px; }
#tab .tabList li.cur{border-bottom:none;background:#fff;color: #F03227;}
#tab .tabCon div.cur{ opacity:1; filter:alpha(opacity=100); } 
/*js检验提示错误信息*/
.error {color:red; }

/*分页*/
.table_page{float:right}
.table_page ul li{display:inline;float:left;line-height:20px;padding-top:5px;}
.table_page ul li a{padding:3px;}